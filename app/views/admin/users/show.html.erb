<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to t("down_csv"), admin_user_path(format: "csv") %>
        <ul>
          <%= t "user.id" %>
          <%= @user.id %>
        </ul>
        <ul>
          <%= t "user.name" %>
          <%= @user.name %>
        </ul>
        <ul>
          <%= t "user.email" %>
          <%= @user.email %>
        </ul>
        <ul>
          <%= t "user.position" %>
          <% @user.positions.each do |position| %>
            <%= position.name %>
          <% end %>
        </ul>
        <% unless @user.team_id == nil %>
          <ul>
            <%= t "user.team" %>
            <%= @user.team.name %>
          </ul>
        <% end %>
        <ul>
          <%= t "user.skill" %>
          <% @user.userskills.each do |f| %>
            <li>
              <%= f.skill.name %>|
              <%= t "skill.level" %>
              <%= f.level %>|
              <%= t "skill.year" %>
              <%= f.year %>
            </li>
          <% end %>
        </ul>
      </h1>
    </section>
  </aside>
</div>
<%= link_to t("user.edit"), edit_admin_user_path(@user), class:"btn btn-success btn-sm" %><br />
<%= link_to t("back"), admin_users_path, class: "glyphicon glyphicon-step-backward" %>


<% @user.userskills.each do |f| %>
  <li>
    <%= f.skill.name %>|
    <%= t "skill.level" %>
    <%= f.level %>|
    <%= t "skill.year" %>
    <%= f.year %>
  </li>
