<div class="row" >
  <aside class= "col-md-6">
    <table>
      <tr>
        <th><%= t "project.name" %>:</th>
        <td><%= @project.name %></td>      
      </tr>
      <tr>
        <th><%= t "user.abb" %>:</th>
        <td><%= @project.abb %></td>      
      </tr>
    </table>
  </aside>
  <aside class= "col-md-6">
    <%= form_for @project do |f| %>
      <div class="row">
        <table class="table">
          <%= f.collection_check_boxes :user_ids, @users, :id, :name do |b| %>
            <tr>
              <%= b.label do %>
                <th><%= b.text %></th>
                <th class="selection_checkbox"><%= b.check_box %></th>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>
      <%= f.submit t("add"), class: "btn btn-primary" %>
    <% end %>
  </aside>
</div>
