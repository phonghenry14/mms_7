<% provide :title, t("userskill.add") %>
<h1><%= t "userskill.add" %></h1>
<aside class= "col-md-6">
  <%= form_for @user do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="row">
      <table class="table">
        <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name do |b| %>
          <tr>
            <%= b.label do %>
              <th><%= b.text %></th>
              <th class="selection_checkbox"><%= b.check_box %></th>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <%= f.submit t("submit"), class: "btn btn-primary" %>
  <% end %>
</aside>
